{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      // ...existing code...
      "name": "Launch Program",
      "program": "${workspaceFolder}/app.js",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      // Python: run current file in the selected interpreter
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true,
      // let VS Code resolve the interpreter (avoid hardcoding venv path)
      "python": "${command:python.interpreterPath}"
    },
    {
      // Launch the Django backend using the Python extension debug adapter
      "name": "Launch Django Backend",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/octofit-tracker/backend/manage.py",
      "args": [
        "runserver",
        "0.0.0.0:8000"
      ],
      "django": true,
      "justMyCode": true,
      // Use the interpreter selected in VS Code (falls back to system python)
      "python": "${command:python.interpreterPath}",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/octofit-tracker/backend",
        "VIRTUAL_ENV": "${workspaceFolder}/octofit-tracker/backend/venv",
        "PATH": "${workspaceFolder}/octofit-tracker/backend/venv/bin:${env:PATH}",
        "DJANGO_SETTINGS_MODULE": "octofit_site.settings"
      }
    },
    {
      // Launch the React frontend using npm start
      "name": "Launch React Frontend",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/octofit-tracker/frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "start"
      ],
      "env": {
        "PORT": "3000",
        "REACT_APP_CODESPACE_NAME": "${env:CODESPACE_NAME}"
      }
    }
  ]
}